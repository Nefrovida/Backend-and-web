{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "baseUrl": "./",
    "paths": {
      "@client": [
        "./prisma/database/prisma/client.ts"
      ],
      "#/*": [
        "*"
      ],
    },
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "util/**/*",
    "prisma.config.ts",
    "database/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}